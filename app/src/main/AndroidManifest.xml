<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="Tings.com.revolut">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="Tings.com.revolut.json.GetJsonActivity"
            android:label="@string/title_activity_get_json"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>

        <service
            android:name="Tings.com.revolut.room.GetMoviesService"
            android:enabled="true"
            android:exported="true" />
        <activity
            android:name="Tings.com.revolut.SpecificMovieActivity"
            android:label="@string/title_activity_specific_purchase"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name="Tings.com.revolut.MyCurrenciesActivity"
            android:label="@string/title_activity_my_purchases"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>